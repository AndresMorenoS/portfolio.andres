---
interface Props {
  title: string;
  date: string;
  description: string;
  link?: string;
}
const { title, date, description, link } = Astro.props;
---

<li class="mb-10 ms-4">
  <div class="absolute w-4 h-4 md:w-3 md:h-3 bg-yellow-500 dark:bg-yellow-200 rounded-full mt-1.5 -start-2 border-2 border-yellow-500 dark:border-yellow-200">
  </div>
  <time class="mb-2 text-base md:text-sm font-normal leading-none text-gray-900 dark:text-gray-100">
    {date}
  </time>
  <h3 class="text-xl md:text-lg font-semibold mt-2 mb-3">
    <strong class="text-yellow-500">{title}</strong>
  </h3>
  <p class="mb-4 text-lg md:text-base font-normal text-gray-900 dark:text-gray-100 text-pretty">
    {description}
  </p>
  {
    link && (
      <a
        href={link}
        class="inline-flex items-center px-6 py-3 md:px-4 md:py-2 text-base md:text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-yellow-500 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:bg-gray-800 dark:text-gray-100 dark:border-gray-600 dark:hover:text-yellow-200"
      >
        Saber mas...
        <svg 
          class="w-4 h-4 md:w-3 md:h-3 ms-2 rtl:rotate-180" 
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none" 
          viewBox="0 0 14 10"
        >
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    )
  }
</li>